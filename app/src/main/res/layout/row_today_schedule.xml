<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/todayRowLayout"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@drawable/rounded_corner">

    <TextView
        android:id="@+id/todayScheduleContent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:focusable="true"
        android:text="Left TextView"
        android:textColor="@color/green2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/todayScheduleDone"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/todayScheduleTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Right TextView"
        android:textColor="@color/green2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/todayScheduleContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/todayScheduleContent" />

    <CheckBox
        android:id="@+id/todayScheduleDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/todayScheduleTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/todayScheduleTime" />


</androidx.constraintlayout.widget.ConstraintLayout>
